#!/bin/sh

echo "Updating vim submodules"
git submodule init
git submodule update

# Make symlinks
ln -s $PWD/.tmux.conf ~/.tmux.conf
ln -s $PWD/.vimrc ~/.vimrc
ln -s $PWD/.vim ~/.vim
ln -s $PWD/.bashrc ~/.bashrc


# Provide Vim a place to put swapfiles
mkdir ~/.swp

if [ $(command -v pip 2>/dev/null | grep -c "pip") -eq 0 ]; then
    echo "pip doesn't appear to be installed"
    echo "this is needed for some things"
    exit 1
fi

# Install powerline
echo "Installing powerline-status"
sudo pip install powerline-status



